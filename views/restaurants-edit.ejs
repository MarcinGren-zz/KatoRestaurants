<% include partials/header.ejs %>

    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="/styles/restaurants-new.css">
    <link href="https://fonts.googleapis.com/css?family=Inconsolata" rel="stylesheet">

    <h1>Edit <%= restaurant.name %></h1>

    <form class="newform" action="/restaurants/<%= restaurant._id %>?_method=PUT" method="POST">
        <div class="newform__container">
            <input class="newform__input" type="text" name="restaurant[name]" value="<%= restaurant.name %>">
            <input class="newform__input" type="text" name="restaurant[image]" value="<%= restaurant.image %>">
            <input class="newform__input" type="text" name="restaurant[description]" value="<%= restaurant.description %>">
            <a class="button newform__link" href="/restaurants">Go back</a>
            <button class="button newform__button" type="submit">Add</button>
        </div>
    </form>


    <% include partials/footer.ejs %>